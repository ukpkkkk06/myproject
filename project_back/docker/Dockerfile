FROM python:3.11-slim as builder

WORKDIR /app

# å®‰è£…æ„å»ºä¾èµ–
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# å¤åˆ¶ä¾èµ–æ–‡ä»¶
COPY requirements.txt .

# å®‰è£… Python ä¾èµ–ï¼ˆåŒ…å« psutil ç”¨äºèµ„æºç›‘æ§ï¼‰
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir psutil

# ===== è¿è¡Œæ—¶é•œåƒ =====
FROM python:3.11-slim

WORKDIR /app

# å®‰è£…è¿è¡Œæ—¶ä¾èµ–
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ä»æ„å»ºé˜¶æ®µå¤åˆ¶ Python åŒ…
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# å¤åˆ¶åº”ç”¨ä»£ç 
COPY . .

# åˆ›å»ºé root ç”¨æˆ·
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# æš´éœ²ç«¯å£
EXPOSE 8000

# ç¯å¢ƒå˜é‡
ENV PYTHONUNBUFFERED=1 \
    ENV=production \
    HEALTH_CHECK_URL=http://localhost:8000/api/v1/health

# ğŸ”¥ å¥åº·æ£€æŸ¥ï¼šæ¯30ç§’æ£€æŸ¥ä¸€æ¬¡ï¼Œå¯åŠ¨åç­‰å¾…10ç§’ï¼Œè¿ç»­3æ¬¡å¤±è´¥åˆ™æ ‡è®°ä¸ºä¸å¥åº·
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD python scripts/health/healthcheck.py || exit 1

# å¯åŠ¨å‘½ä»¤
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "2"]
